<mjml>
  <mj-head>
    <!--引入雲端文字-->
    <mj-font name="Overpass" href="https://fonts.googleapis.com/css2?family=Overpass" />
    <mj-font name="Noto Sans TC" href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC" />
    <!--樣式設定-->
    <mj-attributes>
      <!--以下為開發註解-->
      <!--版面基本設定-->
      <mj-section padding-top="0px" padding-bottom="0px" />
      <mj-wrapper padding="0px" border="1px solid #ebebeb" />
      <mj-image padding-left="8px" padding-right="8px" border-radius="8px" />
      <mj-text padding-left="8px" padding-right="8px" />
      <!--字體設定-->
      <mj-text font-family="'Overpass', 'Noto Sans TC', sans-serif" />
      <!--文字顏色-->
      <mj-class name="text-primary" color="#9c8a72" />
      <mj-class name="text-secondary" color="#b93232" />
      <mj-class name="text-black" color="#646464" />
      <!--價格顏色，僅能運用在 <span> 標籤，且行內以 syle="color:色碼" 進行設定-->
      <mj-class name="text-prize" color="#b94141" />
      <!--頁尾-取消訂閱-->
      <mj-class name="web-link" padding-top="0px" padding-bottom="0px" />
      <mj-class name="web-link-text" font-size="14px" line-height="21px" align="center" text-decoration="none" background-color="#ffffff" />
      <!--header-頁首-->
      <mj-class name="top-header" padding-top="8px" padding-bottom="0px" />
      <mj-class name="top-header-logo" width="200px" align="left" />
      <!--內容-版面1-Banner-->
      <mj-class name="layout-banner" padding-bottom="8px" />
      <!--內容-版面2-Banner文字-->
      <mj-class name="layout-banner-content" padding-bottom="8px" />
      <mj-class name="layout-banner-content-title-l" padding-top="8px " padding-bottom="4px" font-size="24px" line-height="36px" font-weight="bold" />
      <mj-class name="layout-banner-content-title-m" padding-top="4px " padding-bottom="4px" font-size="20px" line-height="30px" font-weight="bold" />
      <mj-class name="layout-banner-content-text" padding-top="4px " padding-bottom="4px" font-size="16px" line-height="24px" />
      <!--內容-書封A-->
      <mj-class name="layout-book-a" padding-top="8px " padding-bottom="16px" />
      <mj-class name="layout-book-a-title" padding-top="4px" padding-bottom="4px" font-size="16px" line-height="24px" />
      <mj-class name="layout-book-a-text" padding-top="4px" padding-bottom="4px" font-size="16px" line-height="24px" />
      <!--內容-書封B-->
      <mj-class name="layout-book-b" padding-top="8px" padding-bottom="8px" />
      <!--內容-書封B文字-->
      <mj-class name="layout-book-b-content" padding-bottom="8px" />
      <mj-class name="layout-book-b-content-title-l" padding-top="8px " padding-bottom="4px" font-size="24px" line-height="36px" font-weight="bold" />
      <mj-class name="layout-book-b-content-title-m" padding-top="4px " padding-bottom="4px" font-size="20px" line-height="30px" font-weight="bold" />
      <mj-class name="layout-book-b-content-text" padding-top="4px " padding-bottom="4px" font-size="16px" line-height="24px" />
      <!--內容-書封C1-->
      <mj-class name="layout-book-c1" padding-top="8px" padding-bottom="8px" direction="ltr" />
      <mj-class name="layout-book-c1-title" padding-bottom="0px" font-size="20px" line-height="30px" font-weight="bold" />
      <mj-class name="layout-book-c1-text" font-size="16px" line-height="24px" />
      <!--內容-書封C2-->
      <mj-class name="layout-book-c2" padding-top="8px" padding-bottom="8px" direction="rtl" />
      <mj-class name="layout-book-c2-title" padding-bottom="0px" font-size="20px" line-height="30px" font-weight="bold" />
      <mj-class name="layout-book-c2-text" font-size="16px" line-height="24px" />
      <!--頁尾-備註-->
      <mj-class name="bottom-remark" />
      <mj-class name="bottom-remark-text" font-size="14px" line-height="21px" align="center" />
      <!--頁尾-取消訂閱-->
      <mj-class name="bottom-other" padding-top="0px" padding-bottom="0px" border-top="1px solid #e5e5e5" />
      <mj-class name="bottom-other-link" font-size="14px" line-height="21px" align="center" text-decoration="underline" background-color="#ffffff" />
      <!--頁尾-版權宣告-->
      <mj-class name="bottom-footer" padding-top="8px" padding-bottom="8px" background-color="#ebebeb" />
      <mj-class name="bottom-footer-text" font-size="14px" line-height="21px" align="center" />
      <!--頁尾-開信碼-->
      <mj-class name="bottom-letter-code" padding="0" height="0px" width="0px" />
    </mj-attributes>
  </mj-head>
